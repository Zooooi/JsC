<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" xmlns:ext="JsF.components.scroller.ext.*"
		 >
	<fx:Style source="JsF/configs/JScroller.css"/>
	<fx:Declarations>
		<s:Animate id="$anim" duration="100">
			<s:motionPaths>
				<s:SimpleMotionPath id="$pth" property="verticalScrollPosition" />
			</s:motionPaths>
		</s:Animate>
	</fx:Declarations>
	<ext:JScroller id="_scroller" styleName="scroller" width="100%" height="100%" horizontalScrollPolicy="off">
		<s:VGroup id="_gr" styleName="group" width="100%" height="100%" />
	</ext:JScroller>
	<s:BusyIndicator id="_dragWaiting" horizontalCenter="0" visible="false" width="30" height="30"/>
</s:Group>
